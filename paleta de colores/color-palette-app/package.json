{
  "name": "paleta-colores-cmyk",
  "version": "1.0.0",
  "description": "Aplicaci√≥n de Paleta de Colores CMYK a RGB y Hexadecimal",
  "main": "main.js",
  "author": "Rigo",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build-win": "electron-builder --win portable",
    "build-linux": "electron-builder --linux AppImage"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.rigo.paletacolores",
    "productName": "Paleta Colores CMYK",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": "portable",
      "icon": "icon.png"
    },
    "linux": {
      "target": "AppImage",
      "icon": "icon.png"
    },
    "mac": {
      "target": "dmg",
      "icon": "icon.png"
    }
  }
}
